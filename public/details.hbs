<body>
    {{> header}}
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img class="details-thumbnail" src="images/the-1975.jpg">
                </div>
                <div class="col-md-8">
                    <div class="details-text">
                        <div class="details-title">Lorem ipsum</div>
                        <div class="group"><i class="fa fa-clock-o" aria-hidden="true"></i><div class="details-date">November 3, 1971 - 17h00</div></div>
